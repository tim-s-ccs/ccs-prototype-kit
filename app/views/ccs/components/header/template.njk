{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}


<header class="header-global header-global--home">
  <div class="ccs-width-container">
    {{ govukPhaseBanner({
      tag: {
        text: "beta"
      },
      html: 'This is a new service â€“ your <a class="govuk-link" href="https://crowncommercial.qualtrics.com/jfe/form/SV_5jzPGtbYCrfydbE">feedback</a> will help us to improve it.'
    }) }}
    <div class="nav-wrapper">
      <a href="/ccs/example/home" class="logo">
        <img src="/public/images/CCS_WHITE_SML_AW.png" alt="Go to the CCS homepage">
      </a>
      <button class="global-navigation__toggler" data-toggler="nav" aria-expanded="true">
        <span>Menu</span>
        <span class="icon">
          <svg width="16" height="13" xmlns="http://www.w3.org/2000/svg">
            <g stroke="currentColor" stroke-width="2" fill="none" fill-rule="evenodd" stroke-linecap="square">
              <path d="M14.5 1.12H1.464M14.5 6.12H1.464M14.5 11.24H1.464"></path>
            </g>
          </svg>
        </span>
      </button>
      <nav class="global-navigation" data-toggle="nav" data-app-uri="http://www.crowncommercial.gov.uk/" data-app-pathinfo="/" aria-hidden="false">
        <ul class="nav-list nav-list--secondary">
          {% for item in params.navigationSecondary %}
            <li class="nav-list__item">
              <a class="nav-list__link" href="{{ item.href }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
        <ul class="nav-list nav-list--primary">
          {% for item in params.navigationPrimary %}
            <li class="nav-list__item">
              <a class="nav-list__link" href="{{ item.href }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
    <div class="homepage-hero govuk-homepage-hero-full-width">
      <div class="govuk-grid-row govuk-margin-left-right-30">
        <div class="govuk-grid-column-one-half">
          <form action="/agreements/search" method="GET">
            <div class="govuk-form-group govuk-form-group--enclosure govuk-form-group--enclosure--homepage govuk-bg-mobile-color">
              <div class="govuk-form-group homepage-hero__search-group">
                <label class="govuk-label" for="framework_q">Search agreements</label>
                <input class="govuk-input" id="framework_q" name="q" type="text">
                <button class="homepage-hero__search-button">
                  <span class="visuallyhidden">Search agreements</span>
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="govuk-grid-column-one-half">
          <form action="/suppliers/search" method="GET">
            <div class="govuk-form-group govuk-form-group--enclosure govuk-form-group--enclosure--homepage govuk-bg-mobile-color">
              <div class="govuk-form-group homepage-hero__search-group">
                <label class="govuk-label" for="supplier_q">Search suppliers</label>
                <input class="govuk-input" id="supplier_q" name="q" type="text">
                <button class="homepage-hero__search-button">
                  <span class="visuallyhidden">Search suppliers</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</header>
